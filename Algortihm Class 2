#include <stdio.h>
int main(void)
{
    char harfNotu;
    printf("Harf notunuzu giriniz =");
    scanf("%c", &harfNotu);
    
    switch(harfNotu)
    {
        case'A';
        printf("Harf Notunuz A dır.");
        break;
        
        case'B';
        printf("Harf Notunuz B dır.");
        break;
        
        case'C';
        printf("Harf Notunuz C dır.");
        break;
        
        case'D';
        printf("Harf Notunuz D dır.");
        break;
        
        case'E';
        printf("Harf Notunuz E dır.");
        break;
        
        case'F';
        printf("Harf Notunuz F dır.");
        break;
        
        default;
        printf("Harf notunuz F dir. Kalma!");
        break;
    }
    return 0;
}
    
