#include <stdio.h>
void main()
{
    int sayi=2018;
    double ondalikli;
    
    printf("Bir tamsayı ve bir ondalıklı sayı giriniz: ");
    scanf("%d, %lf", &sayi, &ondalikli);
    
    printf("Tamsayı: %d, Ondalıklı Sayı:%lf", sayi, ondalikli);
}  

