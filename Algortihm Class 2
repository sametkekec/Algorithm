   
#include <stdio.h>
int main()
{
 int tamsayı =9;
 float ondalik;
 char karakter= 'A';
 char metin[50]"";

  printf("%d, %c", tamsayi, karakter);

  printf(" Bir ondalıklı sayı giriniz: \n");
  scanf("%lf", &ondalik);

  printf(" Bir metinsel ifade giriniz: \n");
  scanf("%s", &metin);

  printf("girilen ondalıklı sayı : %lf, girilen metinsel ifade %s", k ondalik, metin);

return 0;
}

