#include <stdio.h>
int main(){
    int x,y,z, sonuc1, sonuc2;
    printf("x giriniz: ");
    scanf("%d", &x);
    printf("y giriniz: ");
    scanf("%d", &y);
    printf("z giriniz: ");
    scanf("%d", &z);
    
    sonuc1 =(x==y)&&(x<z);
    sonuc2 =(x!=y)&&(y>z);
    if(sonuc1){
        printf("%d", sonuc1);
    }
    else{
     printf("%d", sonuc2);
}
    
}

