#include <stdio.h>
int main(void)
{
    int sayi;
    long int sayi_faktoriyel;
    printf("Bir tam sayı giriniz:");
    scanf("%d", &sayi);
    
    sayi_faktoriyel = 1;
    while (sayi>0)
    {
        sayi_faktoriyel = sayi_faktoriyel*sayi;
        printf("Anlık hesaplanan faktöriyel=%ld, anlık çarpım sayısı:=%d\n",sayi_faktoriyel, sayi);
        sayi--;
    }
    
    printf("Hesaplanan Faöktöriyel = %ld", sayi_faktoriyel);
    return 0;
}

