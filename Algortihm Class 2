#include <stdio.h>
int main(void)
{
    int x,y;
    printf("x ve y değerlerini giriniz.");
    scanf("%d, %d", &x,&y);
    
    while(x <=5)
    {
        printf("x=%d\n", x);
        x++;
    }
    do
    {
        y++;
        printf("y=%d\n", y);
    }
    while (y<=5);
    
    return 0;
}   
    
