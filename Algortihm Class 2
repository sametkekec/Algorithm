#include <stdio.h>
int main(){
    int x=5,y=5,z=10, sonuc;
    sonuc =(x==y)&&(x<z);
    printf("Sonuç 1 dir");
    
    sonuc =(x!=y)&&(y>z);
    printf("%d", sonuc);
}
else{
    printf("Sonuç 0 dır")
}

