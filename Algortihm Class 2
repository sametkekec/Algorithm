#include <stdio.h>
int main(void)
{
    int x; //başlangıç değeri
    printf(" X giriniz=");
    scanf("%d", &x);
    
    while(x<=5){ //bitiş kontrol şartı
    printf("%d\n", x);
    x++; // döngü kontrol değerini arttırma
}
return 0;
}

